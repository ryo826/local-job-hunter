{
  "appId": "com.local-job-hunter.app",
  "productName": "Local Job Hunter",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "win": {
    "target": ["nsis", "zip"]
  },
  "mac": {
    "target": ["dmg", "zip"],
    "category": "public.app-category.business"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
