{
  "appId": "com.local-job-hunter.app",
  "productName": "Local Job Hunter",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "extraResources": [
    {
      "from": ".env",
      "to": ".env"
    }
  ],
  "win": {
    "target": ["nsis", "zip"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
