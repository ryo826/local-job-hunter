{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist-electron",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declaration": false
    },
    "include": [
        "electron/**/*",
        "src/types.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}